# .env.example
# Copy this file to .env and fill in your actual configuration.

# --- DATABASE ---
# Connection string for your PostgreSQL / TimescaleDB database.
DB_DSN="postgresql://user:password@localhost:5432/binance_data"


# --- SYMBOLS ---
# Comma-separated lists of symbols to track for spot and futures markets.
# Do not use spaces between symbols.
# Example: SPOT_SYMBOLS="btcusdt,ethusdt,bnbusdt"
SPOT_SYMBOLS="btcusdt,ethusdt"
FUTURES_SYMBOLS="btcusdt,ethusdt"


# --- POLLING INTERVALS ---
# Time in seconds between polling cycles for REST API endpoints.
OPEN_INTEREST_POLL_INTERVAL=60
DEPTH_SNAPSHOT_POLL_INTERVAL=60


# --- STREAM CONTROLS ---
# Set these to true or false to enable/disable data stream groups on startup.
ENABLE_WEBSOCKET_SPOT=true
ENABLE_WEBSOCKET_FUTURES=true
ENABLE_OPEN_INTEREST=true
ENABLE_DEPTH_SNAPSHOT=true
