# --- POLLING INTERVALS ---
# Time in seconds between polling cycles for REST API endpoints.
OPEN_INTEREST_POLL_INTERVAL=60
DEPTH_SNAPSHOT_POLL_INTERVAL=60


# --- STREAM CONTROLS ---
# Set these to true or false to enable/disable data stream groups on startup.
ENABLE_WEBSOCKET_SPOT=true
ENABLE_WEBSOCKET_FUTURES=true
ENABLE_OPEN_INTEREST=false
ENABLE_DEPTH_SNAPSHOT=true


# --- LIQUIDATION ALERTS ---
# Enable or disable the liquidation alert feature.
ENABLE_LIQUIDATION_ALERTS=true
# N-days lookback for fetching the historical min/max prices.
ALERT_MAX_DAYS_LOOKBACK=30
# The percentage (X) deviation from an N-day extremum (min or max) to trigger an alert.
ALERT_EXTREMUM_DEVIATION_PERCENT=5.0
